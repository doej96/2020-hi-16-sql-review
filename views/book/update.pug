extends ../layout/default.pug

block content
  .wrapper
    h2.title 도서 수정
      .wr-wrapper.border.rounded.p-4.mt-5
        form(action="/book/update" method="post" onsubmit="return onUpdate(this);")
          input(type="hidden" name="id" value=`${r.id}`)
          table.table
            tbody
              tr
                td 책 제목
                td.form-inline
                  input.form-control(type="text" name="name" placeholder="책 제목" value=`${r.name}`)
              tr
                td 저자
                td.form-inline
                  input.form-control(type="text" name="writer" placeholder="저자" value=`${r.writer}`)
          .text-center
           button.btn.btn-primary 도서 수정
           button.btn.btn-danger(type="reset") 다시작성